.photo-list {
    list-style: none
    margin: 0
    padding: 0

    &__item {
        background: #000
        float: left
        margin: 4px
        cursor: pointer
        width: 130px
        height: 80px
        overflow: hidden
        -webkit-animation: create 0.15s ease-out

        img {
            display: block
            opacity: 1
            transition: opacity 0.1s;
            min-width: 100%
            min-height: 100%
            width: auto
            height: auto
        }

        &.selected img {
            opacity: 0.5;
        }
    }
}

@-webkit-keyframes create {
    0% {
        transform: scale(0)
        opacity:0
    }
    100% {
        opacity: 1
        transform: scale(1)
    }
}

.header {
    margin: 0 0 20px;
}

.drop-down {
    float: right
    width: 20%
    margin: 0
}

.user-name {
    font-size: 22px
    line-height: 38px
    margin: 0
}